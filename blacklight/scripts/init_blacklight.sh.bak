<script>
  let currentZoom = 1;
  let isDragging = false;
  let dragStart = { x: 0, y: 0 };
  let scrollOffset = { x: 0, y: 0 };

  const container = document.getElementById('zoom-container');
  const img = document.getElementById('zoomable-image');

  // Click to zoom toggle
  img.addEventListener('click', function(e) {
    currentZoom = currentZoom === 1 ? 2 : 1;
    updateZoom();
  });

  // Mouse wheel zoom
  container.addEventListener('wheel', function(e) {
    e.preventDefault();
    const oldZoom = currentZoom;
    currentZoom += (e.deltaY > 0 ? -0.1 : 0.1);
    currentZoom = Math.max(1, Math.min(currentZoom, 4));
    
    if (oldZoom !== currentZoom) {
      updateZoom();
    }
  });

  // Drag/pan functionality
  container.addEventListener('mousedown', function(e) {
    if (currentZoom > 1) {
      isDragging = true;
      dragStart.x = e.clientX;
      dragStart.y = e.clientY;
      scrollOffset.x = container.scrollLeft;
      scrollOffset.y = container.scrollTop;
      container.classList.add('dragging');
      img.style.cursor = 'grabbing';
    }
  });

  document.addEventListener('mousemove', function(e) {
    if (isDragging) {
      const dx = e.clientX - dragStart.x;
      const dy = e.clientY - dragStart.y;
      container.scrollLeft = scrollOffset.x - dx;
      container.scrollTop = scrollOffset.y - dy;
    }
  });

  document.addEventListener('mouseup', function() {
    if (isDragging) {
      isDragging = false;
      container.classList.remove('dragging');
      img.style.cursor = 'grab';
    }
  });

  // Touch support for mobile
  container.addEventListener('touchstart', function(e) {
    if (currentZoom > 1 && e.touches.length === 1) {
      isDragging = true;
      dragStart.x = e.touches[0].clientX;
      dragStart.y = e.touches[0].clientY;
      scrollOffset.x = container.scrollLeft;
      scrollOffset.y = container.scrollTop;
    }
  });

  document.addEventListener('touchmove', function(e) {
    if (isDragging && e.touches.length === 1) {
      e.preventDefault();
      const dx = e.touches[0].clientX - dragStart.x;
      const dy = e.touches[0].clientY - dragStart.y;
      container.scrollLeft = scrollOffset.x - dx;
      container.scrollTop = scrollOffset.y - dy;
    }
  });

  document.addEventListener('touchend', function() {
    isDragging = false;
  });

  function updateZoom() {
    img.style.width = (100 * currentZoom) + '%';
    img.style.cursor = currentZoom === 1 ? 'grab' : 'grab';
  }
</script>
